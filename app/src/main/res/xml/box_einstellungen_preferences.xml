<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:key="settings_screen">

    <PreferenceCategory
        android:title="Notifications"
        android:key="category_notifications">

        <CheckBoxPreference
            android:key="pref_notifications"
            android:summary="@string/einstellungen_notification_text"
            android:title="@string/einstellungen_notification_title"
            android:defaultValue="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Daten"
        android:key="category_data">

        <Preference android:title="Backup"
            android:key="pref_backup"
            android:summary="Hier kannst du backups machen"/>

    </PreferenceCategory>
</PreferenceScreen>