<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="235dp">
        <android.support.v7.widget.CardView
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:elevation="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/budget_card_view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/budget_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Budget Titel"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/budget_monat_von"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MonatVon"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="23dp"
                    android:layout_alignTop="@+id/relativeLayout2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/relativeLayout2"
                    android:layout_toStartOf="@+id/relativeLayout2" />

                <TextView
                    android:id="@+id/budget_von"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/budget_monat_von"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/budget_monat_von"
                    android:layout_marginBottom="87dp"
                    android:layout_toLeftOf="@+id/relativeLayout2"
                    android:layout_toStartOf="@+id/relativeLayout2"
                    android:text="von"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/budget_jahr_von"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jahrvon"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_alignBottom="@+id/relativeLayout2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:layout_toLeftOf="@+id/relativeLayout2"
                    android:layout_toStartOf="@+id/relativeLayout2" />

                <TextView
                    android:id="@+id/budget_monat_bis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/budget_monat_von"
                    android:layout_alignBottom="@+id/budget_monat_von"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/relativeLayout2"
                    android:text="MonatBis "
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/budget_bis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/budget_von"
                    android:layout_alignBottom="@+id/budget_von"
                    android:layout_alignEnd="@+id/budget_monat_bis"
                    android:layout_alignRight="@+id/budget_monat_bis"
                    android:layout_toRightOf="@+id/relativeLayout2"
                    android:text="bis"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/budget_jahr_bis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/budget_jahr_von"
                    android:layout_alignBottom="@+id/budget_jahr_von"
                    android:layout_alignEnd="@+id/budget_bis"
                    android:layout_alignRight="@+id/budget_bis"
                    android:layout_toRightOf="@+id/relativeLayout2"
                    android:text="JahrBis "
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_below="@+id/budget_title"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="41dp"
                        android:text="VerfÃ¼gbar"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/budget_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/budget_progress_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prozent"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:layout_marginTop="24dp"
                        android:layout_below="@+id/budget_content"
                        android:layout_centerHorizontal="true" />

                    <ProgressBar
                        android:id="@+id/budget_progress_bar_circle"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/box_budget_circle_shape"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="10"
                        android:progressDrawable="@drawable/box_budget_circular_progressbar"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="12dp" />
                </RelativeLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</LinearLayout>