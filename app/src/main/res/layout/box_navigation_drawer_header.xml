<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@mipmap/header_white">

    <LinearLayout
        android:id="@+id/navigation_drawer_header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/navigation_drawer_picture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="8dp"
            app:srcCompat="@mipmap/bonpix_big" />

        <TextView
            android:id="@+id/navigation_drawer_textView"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:text="@string/nav_title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="35dp" />

    </LinearLayout>

</RelativeLayout>


