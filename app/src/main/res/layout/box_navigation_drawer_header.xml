<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@mipmap/header_white">

    <LinearLayout
        android:id="@+id/navigation_drawer_header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom">

    <ImageView
        android:id="@+id/navigation_drawer_picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@mipmap/bonpix_big"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/navigation_drawer_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nav_title"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:textSize="35dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/navigation_drawer_underline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorSecondary"
        android:layout_alignBottom="@+id/navigation_drawer_header_layout">

    </RelativeLayout>



</RelativeLayout>


