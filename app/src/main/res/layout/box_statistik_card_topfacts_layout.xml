<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginRight="3dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">


            <TextView
                android:id="@+id/statistik_card_topfacts_fact_three_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/statistik_card_general_costs_title"
                android:layout_alignEnd="@+id/view"
                android:layout_alignTop="@+id/statistik_card_general_costs_title"
                android:layout_toEndOf="@+id/statistik_card_general_costs_title"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/statistik_card_topfacts_fact_three_content"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/statistik_card_general_costs_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistik_card_topfacts_fact_three_title"
                android:textAlignment="center"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="18dp"
                android:layout_below="@+id/view"
                android:layout_alignStart="@+id/view" />

            <TextView
                android:id="@+id/statistik_card_topfacts_fact_one_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistik_card_topfacts_fact_one_content"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="26sp"
                android:layout_alignBottom="@+id/view"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="14dp"
                android:layout_alignEnd="@+id/view2" />

            <View
                android:id="@+id/view2"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="145dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="80dp"
                android:background="@android:color/darker_gray"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/statistik_card_general_scans_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistik_card_topfacts_fact_one_title"
                android:textAlignment="center"
                android:layout_alignTop="@+id/view"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/view2" />

        </RelativeLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/statistik_card_general_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relativeLayout3"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/statistik_card_topfacts_title"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/statistik_card_topfacts_adresse_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:text="@string/statistik_card_topfacts_fact_two_title"
            android:layout_below="@+id/statistik_card_general_title"
            android:layout_marginTop="10dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/statistik_card_topfacts_fact_two_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/statistik_card_topfacts_adresse_title"
            android:layout_below="@+id/statistik_card_topfacts_adresse_title"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:text="@string/statistik_card_topfacts_fact_two_content"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>