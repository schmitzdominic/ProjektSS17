<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


            <ImageView
                android:id="@+id/swip_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tutorial_text_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tutorial_text_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Hier kommt der Text rein, de die einzelnen Schritte erklÃ¤rt ..."
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_above="@+id/tutorial_imageCount"
                android:layout_alignStart="@+id/swip_image_view"
                android:layout_marginBottom="17dp"
                android:layout_alignEnd="@+id/swip_image_view" />

            <ProgressBar
                android:id="@+id/tutorial_imageCount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="34dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:max="7"
                android:progressTint="@color/colorAccent"
                android:background="@color/colorPrimary"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
</RelativeLayout>