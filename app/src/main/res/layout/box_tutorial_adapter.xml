<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tutorial_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="@string/tutorial_title"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/swip_image_view"
                android:layout_width="wrap_content"
                android:layout_height="360dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/tutorial_text_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp" />

            <TextView
                android:id="@+id/tutorial_text_content"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:textAlignment="center"
                android:text="Hier kommt der Text rein, de die einzelnen Schritte erklÃ¤rt ..."
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_above="@+id/tutorial_imageCount"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>


    <ProgressBar
        android:id="@+id/tutorial_imageCountBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:max="7"
        android:progressTint="@color/colorSecondary"
        android:backgroundTint="@color/cardview_light_background"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <ProgressBar
                android:id="@+id/tutorial_imageCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:max="7"
                android:progressTint="@color/colorAccent"
                android:backgroundTint="@color/cardview_light_background"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>




</RelativeLayout>