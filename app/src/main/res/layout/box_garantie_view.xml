<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/garantie_view_laden_bild"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:src="@drawable/common_google_signin_btn_icon_dark_focused" />

    <TextView
        android:id="@+id/garantie_view_garantiebeginn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Beginn der Garantie"
        android:textSize="14sp"
        android:layout_toLeftOf="@+id/garantie_view_garantie_delete_button"
        android:layout_toRightOf="@+id/garantie_view_laden_bild"/>

    <TextView
        android:id="@+id/garantie_view_zusatz_garantieende"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="Ende der Garantie"
        android:textSize="14sp"
        android:layout_toLeftOf="@id/garantie_view_garantie_delete_button"
        android:layout_toRightOf="@+id/garantie_view_laden_bild"
        android:layout_below="@+id/garantie_view_garantiebeginn"/>


    <ImageView
        android:id="@+id/garantie_view_garantie_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_delete_black_24dp"
        android:tint="@color/colorMenueIcon"
        android:onClick="onDeleteClicked"/>

</RelativeLayout>
