<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="210dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bon_anzeigen_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            app:srcCompat="@mipmap/icon_laden_rewe_24dp" />

        <TextView
            android:id="@+id/bon_anzeigen_ladenname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="10dp"
            android:text="Ladenname"
            android:layout_alignTop="@+id/bon_anzeigen_image"
            android:layout_toRightOf="@+id/bon_anzeigen_image"
            android:layout_toEndOf="@+id/bon_anzeigen_image" />

        <TextView
            android:id="@+id/bon_anzeigen_datum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datum"
            android:layout_below="@+id/bon_anzeigen_ladenname"
            android:layout_alignLeft="@+id/bon_anzeigen_ladenname"
            android:layout_alignStart="@+id/bon_anzeigen_ladenname"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/bon_anzeigen_adresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse"
            android:layout_below="@+id/bon_anzeigen_datum"
            android:layout_alignLeft="@+id/bon_anzeigen_datum"
            android:layout_alignStart="@+id/bon_anzeigen_datum"
            android:layout_marginTop="20dp" />


        <TextView
            android:id="@+id/bon_anzeigen_garantie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Garantie"
            android:layout_below="@+id/bon_anzeigen_adresse"
            android:layout_alignLeft="@+id/bon_anzeigen_adresse"
            android:layout_alignStart="@+id/bon_anzeigen_adresse"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/bon_anzeigen_gesbetrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gesamtbetrag"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/bon_anzeigen_image"
            android:layout_alignStart="@+id/bon_anzeigen_image"
            android:layout_marginBottom="15dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>