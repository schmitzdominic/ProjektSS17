<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginRight="3dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>


        <TextView
            android:id="@+id/statistik_card_topproducts_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/statistik_card_topproducts_title"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/statistik_card_topproducts_article_one_title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/statistik_card_topproducts_article_one"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true" />

        <ProgressBar
            android:id="@+id/statistik_card_topproducts_article_one_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/statistik_card_topproducts_article_one_title"
            android:layout_marginStart="120dp"
            android:layout_toStartOf="@+id/statistik_card_topproducts_article_one_percentage"
            android:maxHeight="50dp"
            android:progressBackgroundTint="@color/colorAccent" />

        <TextView
            android:id="@+id/statistik_card_topproducts_article_one_percentage"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/statistik_card_topproducts_article_one_progressbar"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:text="@string/statistik_card_topproducts_percentage"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/statistik_card_topproducts_article_two_title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/statistik_card_topproducts_article_two"
            android:textAlignment="center"
            android:layout_below="@+id/statistik_card_topproducts_article_one_title"
            android:layout_alignParentStart="true"
            android:gravity="center"/>

        <ProgressBar
            android:id="@+id/statistik_card_topproducts_article_two_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:progressBackgroundTint="@color/colorAccent"
            android:layout_alignTop="@+id/statistik_card_topproducts_article_two_title"
            android:layout_alignStart="@+id/statistik_card_topproducts_article_one_progressbar"
            android:layout_toStartOf="@+id/statistik_card_topproducts_article_one_percentage" />

        <TextView
            android:id="@+id/statistik_card_topproducts_article_two_percentage"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/statistik_card_topproducts_percentage"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/statistik_card_topproducts_article_two_progressbar"
            android:layout_toEndOf="@+id/statistik_card_topproducts_article_two_progressbar" />


        <TextView
            android:id="@+id/statistik_card_topproducts_article_three_title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/statistik_card_topproducts_article_three"
            android:textAlignment="center"
            android:layout_below="@+id/statistik_card_topproducts_article_two_title"
            android:layout_alignParentStart="true"
            android:gravity="center"/>

        <ProgressBar
            android:id="@+id/statistik_card_topproducts_article_three_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:progressBackgroundTint="@color/colorAccent"
            android:layout_alignBottom="@+id/statistik_card_topproducts_article_three_title"
            android:layout_alignStart="@+id/statistik_card_topproducts_article_two_progressbar"
            android:layout_toStartOf="@+id/statistik_card_topproducts_article_two_percentage" />

        <TextView
            android:id="@+id/statistik_card_topproducts_article_three_percentage"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="@string/statistik_card_topproducts_percentage"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@+id/statistik_card_topproducts_article_three_progressbar"
            android:layout_toEndOf="@+id/statistik_card_topproducts_article_three_progressbar" />

    </RelativeLayout>

</android.support.v7.widget.CardView>