<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal">
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.projektss17.bonpix.A_OCR_Manuell"
    tools:showIn="@layout/box_ocr_manuell_screen">


    <EditText
        android:id="@+id/ocr_manuell_article_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="2.27"
        android:inputType="textAutoCorrect"
        android:hint="Artikel Name"/>

    <EditText
        android:id="@+id/ocr_manuell_price_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:hint="Preis"
        android:inputType="number"
        android:digits="0123456789-"
        android:maxLength="10"/>

    <ImageButton
        android:id="@+id/ocr_manuell_button_delete_article"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.19"
        android:background="?android:attr/windowBackground"
        android:contentDescription="@string/button_delete_row_description"
        android:onClick="onDeleteClicked"
        android:src="@mipmap/ic_delete_black_24dp"
        android:tint="@color/colorMenueIcon" />

</LinearLayout>
